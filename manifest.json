{
    "manifest_version": 2,

    "name": "University of Melbourne WAM checker",
    "description": "This extension will notify you when your WAM is checked",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "browser_popup.html"
    },
    "permissions": [
        // "storage",
        "alarms",
        "tabs",
        "notifications"
    ],
    "background": {
        "scripts": ["update.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "WAM", // optional; shown in tooltip
        "default_popup": "popup.html", // optional
        "default_icon": { // optional
            "16": "images/icon16.png" // optional
                // "24": "images/icon24.png",           // optional
                // "32": "images/icon32.png"            // optional
        }
    },
    "content_scripts": [{
        "matches": ["https://prod.ss.unimelb.edu.au/student/SM/ResultsDtls*"],
        "js": ["bower_components/jquery/dist/jquery.min.js", "injectToPage.js"]
    }],
    "author": "Xiao Liang Yu"
}
